<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    

    <style name="White" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#fcfff0</item>
        <item name="android:typeface">serif</item>
    </style>

        <style name="stop" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">#fcfff0</item>
        <item name="android:typeface">serif</item>
    </style>
    
     <style name="Black" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
    </style>   
    
     <style name="routeList">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="stopId">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fcfff0</item>
    </style>
    
    <style name="stopName">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fcfff0</item>
    </style>
    
   
</resources>
